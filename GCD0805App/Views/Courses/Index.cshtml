@model IEnumerable<GCD0805App.Models.Course>
@{
    ViewBag.Title = "Index";
}

<h2>My Todoes</h2>

<div class="form-group">
    @Html.ActionLink("See Stats", "Stats", "Courses", null, new { @class = "btn btn-info" })
    @Html.ActionLink("My Teams", "Belong", "Courses", null, new { @class = "btn btn-default" })
</div>

@using (Html.BeginForm("Index", "Courses", FormMethod.Get))
{
    <div class="form-group">
        @Html.TextBox("searchString", null, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
}


<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Description</td>
                <td>@item.Category.Description</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Todos", new { id = item.Id }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }

    </tbody>
</table>
